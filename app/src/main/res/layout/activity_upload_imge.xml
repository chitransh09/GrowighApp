<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadImageActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/upload_img_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center"
        android:text="Upload Image"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="15dp"/>

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/previewImageView"
        android:layout_width="215dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/upload_img_toolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="99dp"/>

    <ImageButton
        android:id="@+id/deleteImageButton"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintLeft_toRightOf="@id/previewImageView"
        app:layout_constraintTop_toBottomOf="@id/upload_img_toolbar"
        android:layout_marginTop="91dp"
        android:background="@drawable/ic_cross"/>
    
    <Button
        android:id="@+id/btn_select"
        android:layout_width="342dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toBottomOf="@id/previewImageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="38dp"
        android:text="Select Image"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_bold"
        android:background="@drawable/select_btn_bg"/>
    
    <Button
        android:layout_width="342dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toBottomOf="@id/btn_select"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="17dp"
        android:text="Upload Image"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textSize="17sp"
        android:background="@drawable/btn_bg"/>

</androidx.constraintlayout.widget.ConstraintLayout>