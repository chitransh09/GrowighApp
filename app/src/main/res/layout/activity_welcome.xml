<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/welcome_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="fitCenter"
        android:src="@drawable/welcome_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"/>


    <TextView
        android:id="@+id/txt_welcome_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/welcome_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Welcome Ayush"
        android:fontFamily="@font/notosansa_regular"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:layout_marginTop="15dp"/>
    
    <Button
        android:id="@+id/btn_feed"
        android:layout_width="342dp"
        android:layout_height="74dp"
        app:layout_constraintTop_toBottomOf="@id/txt_welcome_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Feeds"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/btn_bg"
        android:elevation="5dp"/>


    <Button
        android:id="@+id/btn_upload_img"
        android:layout_width="342dp"
        android:layout_height="74dp"
        app:layout_constraintTop_toBottomOf="@id/btn_feed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Upload Image"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="45dp"
        android:background="@drawable/btn_bg"
        android:elevation="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>