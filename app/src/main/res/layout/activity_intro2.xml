<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroActivity2">

    <Button
        android:id="@+id/skip_btn1"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:text="Skip intro"
        android:textSize="12sp"
        android:fontFamily="@font/noto_sans_semibold"
        android:textAllCaps="false"
        android:textColor="#3A7EB0"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/skip_btn_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/intro1_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="fitCenter"
        android:src="@drawable/intro2_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@drawable/bottom_section_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="36dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginBottom="20dp"
        android:elevation="3dp">


        <TextView
            android:id="@+id/txt_about"
            android:layout_width="272dp"
            android:layout_height="76dp"
            android:text="Our Missinon"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:fontFamily="@font/notosans_medium"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"/>

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_about"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/manrope_regular"
            android:layout_centerHorizontal="true"/>


        <Button
            android:id="@+id/btn_next2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/progress_button2_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:elevation="10dp"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>